      SELECT
	e.*,r.*,re.*,ert.rid,rrt.reid
FROM
	t_emp e
LEFT JOIN emp_role_table ert on e.id=ert.eid
LEFT JOIN t_role r ON ert.rid=r.id
LEFT JOIN role_resc_table rrt ON r.id=rrt.rid
LEFT JOIN t_resc re ON re.id=rrt.reid
where e.email=#{email} and e.`password`=#{password}
    </select>


